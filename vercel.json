{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.go",
      "use": "@vercel/go"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/posts/(.*)",
      "dest": "/api/posts/slug.go"
    },
    {
      "src": "/api/posts",
      "dest": "/api/posts.go"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
